@using Moonlight.Client.App.PluginApi

@inject PluginService PluginService

<Router AppAssembly="@typeof(BlazorApp).Assembly" AdditionalAssemblies="PluginService.PluginAssemblies">
    <Found Context="routeData">
        <CascadingValue Name="TargetPageType" Value="routeData.PageType">
            <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)"/>
        </CascadingValue>
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            <RoundedIconAlert Color="bg-indigo-500" Icon="bi bi-window-x" Title="Page not found" Description="The page you requested could not be found" />
        </LayoutView>
    </NotFound>
</Router>